<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.monk.monkchat">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_launcher_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_launcher_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MonkChat"
        android:usesCleartextTraffic="true">
        <activity android:name=".settings"></activity>
        <activity android:name=".GroupChatActivity" />
        <activity android:name=".ChatPage" />
        <activity android:name=".MainView" />
        <activity android:name=".Congratulations" />
        <activity android:name=".Confirmation" />
        <activity
            android:name=".SignUp"
            android:label="Monk Signup" />
        <activity
            android:name=".Login"
            android:label="Monk Login" />
        <activity
            android:name=".MainActivity"
            android:label="Monk"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>